<div class="container">
  <h3> Listing Papers <span class="text-center">
    <a href=" /papers/new " class="btn btn-primary float-right ma-rg" role="button" aria-pressed="true">New Paper</a></span>
  </h3>
  <table class="table table-light table-hover table-sm">
    <thead class="thead-dark">
    <tr>
      <th> Name </th>
      <th colspan="3"> Actions </th>
    </tr>
    <% @paper.each do |p| %>
      <tr>
        <td> <%= p.name %> </td>
        <td>
          <a title="show" href="/papers/<%= p.id %>"><%=                   image_tag("visibility.svg",:style=>"max-width:20px;min-width:20px") %></a>
        </td>
        <td>
          <a title="edit" href="/papers/<%= p.id %>/edit"><%= image_tag("edit.svg",:style=>"max-width:20px;min-width:20px") %></a>
        </td>
        <td>
          <a title="delete" data-method="delete" data-confirm="Are you sure?" href="/papers/<%= p.id %>"><%= image_tag("delete.svg",:style=>"max-width:20px;min-width:20px") %></a>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
</div>

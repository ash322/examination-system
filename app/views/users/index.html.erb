<div class="container">
  <h1> Listing Users </h1>
  <table class="table table-light table-hover table-sm">
    <thead class="thead-dark">
      <tr>
        <th> Fname </th>
        <th> Lname </th>
        <th> Contact </th>
        <th> Email </th>
        <th colspan='3'> Actions </th>
      </tr>
    </thead>
    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.fname %></td>
          <td><%= user.lname %></td>
          <td><%= user.contact %></td>
          <td><%= user.email %></td>
          <td>
            <a title="show" href="/users/<%= user.id %>"><%=                   image_tag("visibility.svg",:style=>"max-width:20px;min-width:20px") %></a>
          </td>
          <td>
            <a title="edit" href="/users/<%= user.id %>/edit"><%= image_tag("edit.svg",:style=>"max-width:20px;min-width:20px") %></a>
          </td>
          <td>
            <a data-method="delete" title="delete" data-confirm="Are you sure?" href="/users/<%= user.id %>"><%= image_tag("delete.svg",:style=>"max-width:20px;min-width:20px") %></a>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
